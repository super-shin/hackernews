<div class="homepage-container">
  <div class="homepage-header">
  <h1>Hacker News</h1>
    <form action="/login" method="post">
      <div class="form">

        <div class="auth-links">
        <% if logged_in? %>
          <button class="btn"><a href="/logout">Logout</a></button>
          <button class="btn"><a href="/posts/new">New Post</a></button>
        <% else %>
          <button class="btn"><a href="/login">Login</a></button>
          <button class="btn"><a href="/register">Register</a></button>
        <% end %>
        </div>

      <h3>Posts:</h3>
      <div class="homepage-posts">
        <ul>
          <% @posts.each do |post| %>
            <li><a href="<%= post['url'] %>"><%= post['title'] %> - <%= post['votes'] %> ðŸŒŸ</a></li>
          <% end %>
        </ul>
      </div>
      </div>
    </form>
  </div>
</div>
